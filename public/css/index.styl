section
  box-shadow black 0 6px 10px -8px
  border-bottom 3px solid rgba(0,0,0,0.2)
  padding: 47px 50px
  box-sizing: border-box
  h2
    font-size: 22px
    font-weight: 400
    color #545454
  p
    font-weight 400
    @media (min-width: 768px)
      font-size 14px
    @media (min-width: 992px)
      font-size 18px
    @media (min-width: 1200px)
      font-size 22px
#image
  width 100vw
  height 100vh
  overflow hidden
  background linear-gradient(to right, rgba(13,13,13,0.7) 0%, rgba(0,0,0,0.5) 68%, rgba(13,13,13,0.7) 99%), url('../img/main-bckg-1.jpg') no-repeat center center scroll
  background-size cover
  display: flex
  flex-direction: column
  justify-content: space-between
  align-content: center
  padding: 35vh 0 0 0
  box-sizing: border-box
  text-align: center
  .welcome-message
    padding: 0 20%
    text-transform: uppercase
    box-sizing: border-box;
    width 100%
    font-weight: 500
    font-size: 25px
    color: rgba(255, 255, 255, .7)
    font-family: 'Exo 2'
    @media (min-width: 768px)
      padding: 10vh 13vw
      font-size: 3.5vw

  .scroll-down
    width 100%
    a
      i:first-child
        color rgba(255, 255, 255, .3)
      i:last-child
        color rgba(255, 255, 255, 1)
        margin-top: 2px
    a:hover
      i:last-child
        animation: scrollMe .5s infinite
@keyframes scrollMe {
  0% {
    margin 0 0 0 0
  }
  40% {
    margin 5px 0 0 0
  }
  95% {
    margin  0 0 0 0
  }
}
#about
  text-align center
  font-weight 400
  p
    width 70%
    margin 30px auto
#services
  text-align center
  .categories
    position relative
    display flex
    justify-content space-around
    flex-flow row wrap
    .wrapper
      position relative
      display inline-block
      flex 1
      outline none
      text-shadow 0 0 1px rgba(255,255,255,0.3)
      margin-bottom: 24px
      .overlay
        height: 257px;
        width: 287px;
        position: absolute;
        left: 50%;
        transform: translateX(-144px);
        background: linear-gradient(to bottom,  rgba(255,255,255,0) 80%, rgba(13,13,13,0.7) 99%)
        z-index: 5
      a
        color black
        text-decoration none
        position: relative
        &:before
          height: 257px
          width: 0
          overflow: hidden
          content: ""
          background: rgba(255,255,255,0.9)
          position: absolute
          padding: 0
          box-sizing: border-box
          transition: all cubic-bezier(0.1, 0.1, 0.2, 0.9) .4s
        &:after
          content: attr(data-description)
          transition: all cubic-bezier(.62,1,.83,1) .2s
          position: absolute
          overflow: hidden
          height: 257px
          width: 287px
          left: -70px
          box-sizing: border-box
          padding: 50px 0px
          opacity: 0
          color: transparent
          font-size: 0
        &:hover:before
          width: 287px
          padding: 79px 30px
        &:hover:after
          left: 0
          padding: 50px 30px
          opacity: 1
          color: rgba(0,0,0,0.7)
          font-size: 16px
        img
          border: 1px solid rgba(0,0,0,0.2)
          box-sizing: border-box
          border-radius: 2px
          height: 257px
          width: 287px
      .title
        box-sizing: border-box
        text-transform: uppercase
        display: inline-block
        position: absolute
        font-size: 26px
        font-weight: 600
        margin: 0
        z-index: 20
        left: 0px
        padding-top: 218px
        color: #fff
        height: 257px;
        width: 287px;
      @media (min-width: 768px)
        flex-basis 50%
      @media (min-width: 992px)
        flex-basis 33%
      h3
        text-transform: uppercase
#benefits
  text-align: center
  div
    position relative
    width: 100%
    display flex
    justify-content space-around
    flex-flow row wrap
    p
      cursor: pointer
      flex 1
      margin: 10px 10px 40px 10px
      padding-top: 120px
      background-repeat: no-repeat
      background-position: center
      @media (max-width: 768px)
        flex-basis 100%
      @media (min-width: 768px)
        flex-basis 30%
      @media (min-width: 992px)
        flex-basis 30%
      &#departure
        background-image url("../img/departure.png")
      &#quality
        background-image url("../img/quality.png")
      &#costumes
        background-image url("../img/costumes.png")
#collective-work
  text-align: center
  background linear-gradient(to right, rgba(13,13,13,0.1) 0%, rgba(255,255,255,0.28) 30%,  rgba(255,255,255,0.28) 70%, rgba(13,13,13,0.1) 99%), url("../img/collective-bckg.jpg") center center scroll
  background-size cover
  p
    width 78%
    margin: auto
    font-weight: 600
    @media (min-width: 992px)
      width 70%
  .logo-inner
    width: 100vw
    margin-top: 50px
    margin-left: -50px
    background: rgba(255,255,255,.4)
    padding 3vw 0
    border-top: 2px solid rgba(0,0,0,.3)
    border-bottom: 2px solid rgba(0,0,0,.3)
    box-sizing: border-box
    .main-title
      font-weight 400
      text-transform uppercase
      font-family "Bask Old Face"
      font-size 30px
      line-height 20px
      margin 15px 0 0 0
      @media (min-width: 768px)
        margin 10px 0 0 0
      @media (min-width: 992px)
        height 34px
        margin 0
        font-size 42px
        line-height 28px
      @media (min-width: 1200px)
        height 34px
        margin 0
        font-size 48px
        line-height 28px
    .main-subtitle
      font-weight 200
      font-size 6.8px
      @media (min-width: 768px)
        line-height 10px
      @media (min-width: 992px)
        height 26px
        margin 0px 0 0 0
        font-size 18px
        line-height 32px
      @media (min-width: 1200px)
        font-size 28px
        line-height 28px
#feedback
  text-align: center
  form
    background:#fff
    border-radius:2px
    padding:20px
    ul
      width: 100%
      list-style: none
      padding: 0
      margin: 0
      display: flex
      justify-content: space-around
      flex-flow row wrap
      li
        flex 1
        display: inline-block
        padding: 9px
        border: 1px solid #DDDDDD
        margin-bottom: 30px
        border-radius: 3px
        margin: 10px
        @media (max-width: 768px)
          flex-basis 100%
        @media (min-width: 768px)
          flex-basis 30%
        &:last-child
          border: none
          margin-bottom: 0px
          text-align: center
          @media (min-width: 768px)
            flex-basis 10%
      label
        display: block
        float: left
        background: #FFFFFF
        padding: 2px 5px 2px 5px
        color: #B9B9B9
        overflow: hidden
        font-size: 18px
        margin-top: -25px
      input[type="text"],
      input[type="tel"]
        text-align: center
        box-sizing: border-box
        width: 100%
        display: block
        outline: none
        border: none
        height: 25px
        line-height: 25px
        font-size: 18px
        padding: 0
      span
        background: #F3F3F3
        display: block
        padding: 3px
        margin: 3px -9px -9px -9px
        text-align: center
        color: #808080
        font-size: 14px
      input[type="submit"]
        width 100%
        background: #e1e1e1
        border: none
        padding: 10px 20px 10px 20px
        border-bottom: 3px solid #c5c5c5
        border-radius: 2px
        color: #a9a7a7
        cursor: pointer
        text-transform: uppercase
        letter-spacing: 2px
        &:hover
          background: #cecece
          color:#fff
