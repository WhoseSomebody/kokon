#header-mobile
  height: 55px
  background: #fff
  position: relative
  a
    color #000
#top
  background: url('/img/b31.png')
  display: flex
  flex-wrap: wrap
  .summary
    font-family: 'amsdam'
    box-sizing: border-box
    z-index: 25
    font-size: min(3.5vw, 3vh)
    width: 100vw
    min-height: 50vh
    @media (min-width: 768px)
      font-size: 1.2vw
      width: 50vw
      height: 25vw
    .title
      text-align: center
    .letter
      text-align: justify
      height: 100%
      width: 100%
      box-sizing: border-box
      display: block;
      position: relative;
      padding: 6vw
      @media (min-width: 500px)
        padding: 2vw
        height: 99.7%
        width: 99%
      @media (min-width: 768px)
        padding 2vw
      &:after
        content: "";
        background: url('/img/b31.png')
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        position: absolute;
        z-index: -1;
  #lightgallery
    display: flex
    flex-wrap: wrap
    margin-top: -24.9vw
  .galery-item
    position: relative
    cursor: pointer

    width: 24.9vw
    height: 24.9vw
  img
    object-fit: cover
    box-sizing: border-box

    width: 24.3vw
    height: 24.3vw
    padding: .15vw
    margin: .1vw


  .overlay
    position: absolute
    left: 50%
    background: linear-gradient(to right, rgba(13,13,13,0.2) 0%,  rgba(255,255,255,0.2) 50%, rgba(13,13,13,0.2) 99%)
    z-index: 20

    width: 24.5vw
    height: 24.5vw
    margin-top: -26vw
    transform: translateX(-12.45vw)
    @media (min-width: 500px)
      margin-top: -.6vw
    @media (min-width: 768px)
      width: 24.5vw
      height: 24.5vw
      margin-top: -25vw

    &:after
      transition: all .1s linear
      content: ''
      position: absolute
      left: 0
      box-shadow: 0 0 10px black
      border-radius: 50%
      width: 100%
      height: 20px
      display: block
      bottom: 0px
      clip: rect(20px auto 40px auto)
    &:hover
      &:after
        box-shadow: 0 0 25px black
