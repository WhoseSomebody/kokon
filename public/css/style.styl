*
  transition all linear .2s
::-webkit-scrollbar-track
	-webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
	background-color #F5F5F5
	border-radius 0px

::-webkit-scrollbar
	width 5px;
	background-color #F5F5F5
  cursor pointer

::-webkit-scrollbar-thumb
	border-radius 5px
	background-image -webkit-gradient(linear,
									   left bottom,
									   left top,
									   color-stop(0.44, #000),
									   color-stop(0.72, #000),
									   color-stop(0.86, #000));
body
  margin 0
  padding 0
  font-family: 'geometria-light'
  font-weight: 200
  display: flex
  min-height: 100vh
  flex-direction: column
  section
    letter-spacing: .5px

#content
  overflow hidden
  flex 1
header
  z-index 100
  width 100%
  display none
  box-shadow 1px -3px 10px #000
  @media only screen and (min-width: 768px)
    display flex
    justify-content space-around
  @media only screen and (min-width: 992px)
    height 110px
  @media only screen and (min-width: 1200px)
    height 130px
  &>div
    display inline-block
  a
    display inline-block
    outline none
    text-decoration none
    text-shadow 0 0 1px rgba(255,255,255,0.3)
    color black
  .logo-space
    height 100%
    text-align center
    .main-title
      font-weight 300
      text-transform uppercase
      font-family "Bask Old Face"
      @media (min-width: 768px)
        font-size 30px
        line-height 20px
        margin 14px 0 0 0
      @media (min-width: 992px)
        height 34px
        margin 26px 0 0 0
        font-size 42px
        line-height 28px
      @media (min-width: 1200px)
        height 34px
        margin 38px 0 0 0
        font-size 48px
        line-height 28px

    .main-subtitle
      font-weight 200
      letter-spacing: 0px
      // font-family "Times  New  Roman"
      @media (min-width: 768px)
        font-size 7.5px
        line-height 10px
      @media (min-width: 992px)
        height 26px
        margin 0px 0 0 0
        font-size 11px
        line-height 32px
      @media (min-width: 1200px)
        font-size 12.5px
        line-height 28px
  .slogan
    font-weight 400
    text-transform uppercase
    @media (min-width: 768px)
      height 5px
      font-size 12px
      margin 13px 0 0 0
    @media (min-width: 992px)
      height 15px
      font-size 18px
      margin 22px 0 0 0
    @media (min-width: 1200px)
      height 19px
      font-size 19px
      margin 30px 0 0 0
  nav
    font-weight 400
    @media (min-width: 768px)
      height 12px
      margin 23px 0 0 0
      font-size 14px
    @media (min-width: 992px)
      font-size 18px
    @media (min-width: 1200px)
      height 19px
    ul
      list-style none
      display flex
      justify-content space-between
      padding-left 0
      li
        display inline
        a
          position relative
          display inline-block
          outline none
          text-decoration none
          text-shadow 0 0 1px rgba(255,255,255,0.3)
          color black
          &::before
            position absolute
            top 0
            left 0
            overflow hidden
            max-width 0
            border-bottom 2px solid #000
            padding-bottom 2px
            content attr(data-hover)
            transition max-width 0.2s
            max-height 16px
            @media (min-width: 992px)
              max-height 22px
          &:hover::before
            max-width 100%
  .numbers
    display flex
    justify-content space-around
    flex-direction column
    background-image url("/img/phone.png")
    background-repeat no-repeat
    background-position 0 5px
    font-family Arial
    color #999
    @media (min-width: 768px)
      width 110px
      margin 18px 0 23px 10px
      padding 3px 0 0 35px
      background-size 30px auto
      font-size 12px
      height 27px
    @media (min-width: 992px)
      width 130px
      margin 35px 0 30px 0px
      padding 2px 0 0 50px
      background-size 40px auto
      font-size 14px
      height 39px
    @media (min-width: 1200px)
      width 170px
      margin 30px 0 30px 0px
      padding 0 0 0 60px
      background-size 50px auto
      font-size 17px
      height 49px
    .phone
      @media (min-width: 768px)
        height: 10px
        margin -5px 0 0 0

