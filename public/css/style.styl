.mobile-menu
  z-index: 100
  @media (min-width: 768px)
    display none
  position fixed
  left: 50px
  top: -10px
  height 150px
  box-sizing border-box
  font-size 3px
  .menu-open-button
      width 60px
      height 60px
      background #000
      border-radius: 100%
  .menu-item, .menu-open-button
      margin-left -36px
      position absolute
      top 15px
      color white
      text-align center
      line-height 35px
      transform translate3d(0, 0, 0)
      transition transform ease-out 200ms
      overflow: hidden
  .menu-item
      text-align: center
      color #000
      width 0
      height: 36px
      text-decoration: none
      padding: 0px 4px
      font-weight: 600
      letter-spacing: 1px
      margin: 1px -49px
      background: rgba(255, 255, 255, 0.8);
      border-radius: 25px
      visibility: hidden

  .menu-open
      display none
      &:checked
          & + .menu-open-button
              transition-timing-function linear
              transition-duration 200ms
              .hamburger-1
                  transform translate3d(0, 0, 0) rotate(45deg)
              .hamburger-2
                  transform translate3d(0, 0, 0) scale(0.1, 1)
              .hamburger-3
                  transform translate3d(0, 0, 0) rotate(-45deg)
          & ~ .menu-item
              font-size 22px
              width 123px
              visibility: visible
              transition-timing-function cubic-bezier(0.165, 0.84, 0.44, 1)
              &:nth-child(3)
                  transition-duration 190ms
                  transform translate3d(0, 70px, 0)
              &:nth-child(4)
                  transition-duration 290ms
                  transform translate3d(0, 110px, 0)
              &:nth-child(5)
                  transition-duration 390ms
                  transform translate3d(0, 150px, 0)
              &:nth-child(6)
                  transition-duration 490ms
                  transform translate3d(0, 190px, 0)


  .hamburger
      width 20px
      height 2px
      background-color: #fff
      display block
      position absolute
      top 50%
      left 50%
      margin-left -10.5px
      margin-top -1px
      transition transform 200ms

  .hamburger-1
      transform translate3d(0, -8px, 0)

  .hamburger-2
      transform translate3d(0, 0, 0)

  .hamburger-3
      transform translate3d(0, 8px, 0)

  .menu-item
      &:hover
          color rgba(0, 0, 0, .5)
      &:nth-child(3)
          transition-duration 180ms
      &:nth-child(4)
          transition-duration 180ms
      &:nth-child(5)
          transition-duration 180ms
      &:nth-child(6)
          transition-duration 180ms

  .menu-open-button
      z-index 2
      transition-timing-function cubic-bezier(0.175, 0.885, 0.32, 1.275)
      transition-duration 400ms
      transform scale(1.1, 1.1) translate3d(0, 0, 0)
      cursor pointer
      &:hover
