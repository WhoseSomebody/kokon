extends ./layout

block head-link
    link(rel="stylesheet" type="text/css" href="css/jquery-ui.min.css")
    link(rel="stylesheet" type="text/css" href="css/jquery-ui.theme.min.css")
    link(rel="stylesheet" type="text/css" href="css/admin.css")

block content
    .admin-panel
        h2 Панель Администратора
        #tabs
            ul 
                li 
                    a(href="#tv") Телевидение
                li 
                    a(href="#movie") Кино
                li 
                    a(href="#corporate") Корпоратив
                li 
                    a(href="#wedding") Свадьба
                li 
                    a(href="#special-makeup") Спецгрим
                li 
                    a(href="#show-business") Шоу-бизнес   
            each category in categories
                div(id=category.id)
                    h3 Упорядочить фото
                    form(data-category=category.id).pictures
                        ul.sortable
                            each url in category.image_urls
                                li.ui-state-default
                                    .thumb
                                        img(src=url).pictures
                    hr     
                    h3 Добавить новые фото
                    form(data-category=category.id).upload
                        .custom-file-upload
                            input(type="file" id="file" name="myfiles[]" multiple) 
                        br
                        input(type="submit" value="Загрузить фото").save-upload     
                        br
                        small *При загрузке все несохраненные изменения будут утеряны                          
                                                         
