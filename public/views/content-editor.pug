        $.featherlight.defaults.closeSpeed = 10;
        $.featherlight.defaults.openTrigger = "dblclick";
        $.featherlight.defaults.contentFilters = ["image"];
        $.featherlight.defaults.targetAttr = 'data-featherlight';
        
        $("#tabs").tabs({active: 0});
        $( ".sortable" ).sortable({
